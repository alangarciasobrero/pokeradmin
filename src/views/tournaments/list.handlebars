{{!-- Vista de lista de torneos --}}
<div class="tournament-list-container">
    {{!-- Estilos embebidos para la lista de torneos --}}
    <style>
        .tournament-list-container {
            max-width: 650px;
            margin: 48px auto;
            background: linear-gradient(135deg, #f8fafc 0%, #e3e9f7 100%);
            border-radius: 18px;
            box-shadow: 0 6px 32px rgba(60, 60, 120, 0.13);
            padding: 2.5rem 2.8rem 2.5rem 2.8rem;
            font-family: 'Segoe UI', Arial, sans-serif;
            border: 1.5px solid #e0e7ef;
        }

        .tournament-list-container h1 {
            color: #283593;
            font-size: 2.3rem;
            margin-bottom: 2.2rem;
            text-align: center;
            letter-spacing: 1px;
            font-weight: 700;
            text-shadow: 0 2px 8px #e3e9f7;
        }

        .tournament-list {
            list-style: none;
            padding: 0;
            margin: 0 0 2.2rem 0;
        }

        .tournament-list li {
            background: none;
            border-radius: 10px;
            margin-bottom: 1.1rem;
            padding: 0;
            box-shadow: none;
            display: block;
            transition: none;
            cursor: pointer;
        }

        .tournament-list .tournament-box-link {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 1px 8px rgba(60, 60, 120, 0.07);
            padding: 1.1rem 1.5rem;
            color: #3949ab;
            font-size: 1.18rem;
            font-weight: 600;
            text-decoration: none;
            transition: box-shadow 0.2s, color 0.2s;
            cursor: pointer;
        }

        .tournament-list .tournament-box-link:hover {
            box-shadow: 0 4px 16px #c5cae9;
            color: #1a237e;
            text-decoration: none;
        }

        .tournament-list .tournament-date {
            color: #283593;
            font-size: 1.05rem;
            font-weight: 500;
            background: #e8eaf6;
            border-radius: 6px;
            padding: 0.2rem 0.7rem;
            margin-left: 1.2rem;
        }

        .add-tournament-btn {
            display: inline-block;
            margin-top: 1.8rem;
            color: #fff;
            background: linear-gradient(90deg, #3949ab 60%, #1a237e 100%);
            padding: 0.6rem 1.5rem;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            font-size: 1.08rem;
            box-shadow: 0 2px 8px #e3e9f7;
            transition: background 0.2s, box-shadow 0.2s;
        }

        .add-tournament-btn:hover {
            background: linear-gradient(90deg, #1a237e 60%, #3949ab 100%);
            box-shadow: 0 4px 16px #c5cae9;
        }
    </style>
    {{!-- Título principal de la página --}}
    <h1>Tournaments</h1>
    {{!-- Lista de torneos, cada caja es clickeable --}}
    <ul class="tournament-list">
        {{#each tournaments}}
        <li>
            <a class="tournament-link tournament-box-link" href="/tournaments/{{this.id}}">
                <span>{{this.tournament_name}}</span>
                <span class="tournament-date">{{this.start_date}}</span>
            </a>
        </li>
        {{/each}}
    </ul>
    {{!-- Botón para agregar un nuevo torneo --}}
    <a class="add-tournament-btn" href="/tournaments/new">Add Tournament</a>
</div>