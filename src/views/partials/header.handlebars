<header class="pa-header">
    <a href="/" style="text-decoration:none; color:inherit; display:inline-flex; align-items:center; gap:0.5rem;">
        <span class="logo">
            <!-- Poker Diamond Logo: solo diamante SVG grande y elegante -->
            <svg width="38" height="38" viewBox="0 0 38 38" fill="none">
                <!-- Diamante rojo con borde -->
                <polygon points="19,5 33,19 19,33 5,19" fill="#e53935" stroke="#3949ab" stroke-width="2.2"/>
                <!-- Sombra interior para efecto 3D -->
                <polygon points="19,8 30,19 19,30 8,19" fill="#FFD6D6" opacity="0.5"/>
            </svg>
        </span>
        <span>PokerAdmin</span>
    </a>
        <nav class="nav">
                <a href="/tournaments">Torneos</a>
                {{#if role}}
                        {{#if (eq role 'admin')}}
                            <a href="/admin/dashboard">Dashboard</a>
                            <a href="/admin/games/tournaments/list">Torneos (gestión)</a>
                            <a href="/admin/registrations/list">Inscripciones</a>
                            <a href="/admin/games/cash/list">Mesas Cash</a>
                            <a href="/admin/games/ranking">Ranking</a>
                            <a href="/admin/users">Usuarios</a>
                        {{/if}}
                {{/if}}
                {{#if username}}
                    <form method="post" action="/logout" style="display:inline;">
                        <button type="submit" class="btn-logout">Cerrar sesión ({{username}})</button>
                    </form>
                {{/if}}
        </nav>
</header>
