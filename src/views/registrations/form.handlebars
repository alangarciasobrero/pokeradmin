<div class="registration-form-modern">
  <div class="form-header">
    <h2>üéÆ {{formTitle}}</h2>
  </div>
  
  <form action="{{formAction}}" method="POST" class="modern-form" id="registrationForm">
    <!-- Secci√≥n 1: Datos del torneo -->
    <div class="form-section">
      <h3 class="section-title">üèÜ Seleccionar Torneo</h3>
      <div class="form-group">
        <label for="tournament_id">Torneo:</label>
        <select name="tournament_id" id="tournament_id" required class="select-modern">
          <option value="">-- Selecciona un torneo --</option>
          {{#each tournaments}}
            <option value="{{id}}">{{tournament_name}} ({{formatDate start_date}})</option>
          {{/each}}
        </select>
      </div>
    </div>

    <!-- Secci√≥n 2: Datos del jugador -->
    <div class="form-section">
      <h3 class="section-title">üë§ Seleccionar Jugador</h3>
      <div class="form-group">
        <label for="user_id">Jugador:</label>
        <select name="user_id" id="user_id" required class="select-modern">
          <option value="">-- Selecciona un jugador --</option>
          {{#each users}}
            <option value="{{id}}">{{full_name}} ({{username}})</option>
          {{/each}}
        </select>
      </div>
    </div>

    <!-- Secci√≥n 3: Tipo de acci√≥n -->
    <div class="form-section">
      <h3 class="section-title">üéØ Tipo de Inscripci√≥n</h3>
      <div class="form-group">
        <label for="action_type">Tipo de acci√≥n:</label>
        <select name="action_type" id="action_type" required class="select-modern">
          <option value="1">üí∞ Buy-in (Entrada inicial)</option>
          <option value="2">üîÑ Re-entry (Reentrada)</option>
          <option value="3">‚ú® Duplo (Doble)</option>
        </select>
        <small class="form-help">
          ‚ÑπÔ∏è Solo puede haber UN buy-in por jugador. Re-entry y Duplo se permiten despu√©s del buy-in inicial.
        </small>
      </div>
    </div>

    <!-- Secci√≥n 4: Puntualidad -->
    <div class="form-section">
      <h3 class="section-title">‚è∞ Puntualidad</h3>
      <div class="form-group checkbox-group">
        <input type="hidden" name="punctuality" value="false">
        <label class="checkbox-label">
          <input type="checkbox" name="punctuality" id="punctuality" value="true">
          <span>‚úÖ El jugador lleg√≥ a tiempo</span>
        </label>
      </div>
    </div>

    <!-- Botones de acci√≥n -->
    <div class="form-actions">
      <button type="submit" class="btn-submit">‚úîÔ∏è Registrar Inscripci√≥n</button>
      <a href="/admin/games/tournaments" class="btn-cancel">‚úñÔ∏è Cancelar</a>
    </div>
  </form>
</div>

