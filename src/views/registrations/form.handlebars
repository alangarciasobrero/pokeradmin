<script>
// Validar que no haya dos buy-ins para el mismo jugador en el mismo torneo
document.getElementById('registrationForm').addEventListener('submit', async function(e) {
  const actionType = document.getElementById('action_type').value;
  const userId = document.getElementById('user_id').value;
  const tournamentId = document.getElementById('tournament_id').value;
  
  if (actionType === '1' && userId && tournamentId) { // Buy-in
    e.preventDefault();
    
    // Verificar si ya existe un buy-in
    const response = await fetch(`/admin/registrations/check-buyin?user_id=${userId}&tournament_id=${tournamentId}`);
    const data = await response.json();
    
    if (data.exists) {
      alert('‚ö†Ô∏è Este jugador ya tiene un Buy-in registrado en este torneo. Solo puede haber UN buy-in por participante. Use Re-entry o Duplo para acciones adicionales.');
      return false;
    }
    
    // Si no existe, continuar con el submit
    this.submit();
  }
});
</script>
