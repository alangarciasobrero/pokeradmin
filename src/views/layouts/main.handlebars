<body>
    {{!-- Render role-specific header: admin gets admin header, others get player header. Uses `role` set in res.locals by session middleware. --}}
    {{#if (eq role 'admin')}}
        {{> header_admin }}
    {{else}}
        {{> header_player }}
    {{/if}}
        {{#if flash}}
            <div class="flash flash-{{flash.type}}">{{flash.message}}</div>
        {{/if}}
    <main>
        {{{body}}}
    </main>
    {{> footer }}
</body>
</html>
