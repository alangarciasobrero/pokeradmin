<section class="pa-card admin-payments-unassigned">
  <h1>Propinas sin asignar</h1>

  {{#if payments}}
    <table class="pa-table">
      <thead><tr><th>ID</th><th>Referencia</th><th>Monto</th><th>Method</th><th>Acci√≥n</th></tr></thead>
      <tbody>
        {{#each payments}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.reference_id}}</td>
            <td>{{currency this.amount}}</td>
            <td>{{this.method}}</td>
            <td>
              <form method="post" action="/admin/payments/unassigned/{{this.id}}/assign">
                <input name="user_id" placeholder="user id" style="width:100px;" />
                <button class="btn" type="submit">Asignar</button>
              </form>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>No hay propinas sin asignar.</p>
  {{/if}}

  <style>
    .pa-table { width:100%; border-collapse:collapse; }
    .pa-table td, .pa-table th { padding:8px; border-bottom:1px solid #eee; }
    .btn { background:#007bff; color:#fff; padding:6px 10px; border-radius:6px; }
  </style>
</section>
