<div class="stats-container">
	<div class="stats-header">
		<div class="user-info">
			{{#if targetUser.avatar}}
				<img src="{{targetUser.avatar}}" alt="{{targetUser.username}}" class="user-avatar-large" />
			{{else}}
				<div class="avatar-placeholder-large">üë§</div>
			{{/if}}
			<div>
				<h1>{{#if targetUser.full_name}}{{targetUser.full_name}}{{else}}{{targetUser.username}}{{/if}}</h1>
				<p class="username">@{{targetUser.username}}</p>
				{{#if isAdmin}}
					<a href="/admin/users/{{targetUser.id}}/edit" class="btn-link">‚úèÔ∏è Editar usuario</a>
				{{/if}}
			</div>
		</div>
		<div class="quick-stats">
			<div class="stat-card">
				<span class="stat-value">{{stats.user.current_points}}</span>
				<span class="stat-label">Puntos</span>
			</div>
			<div class="stat-card">
				<span class="stat-value">{{stats.tournaments.total_tournaments}}</span>
				<span class="stat-label">Torneos</span>
			</div>
			<div class="stat-card">
				<span class="stat-value">{{stats.cash.total_sessions}}</span>
				<span class="stat-label">Sesiones Cash</span>
			</div>
		</div>
	</div>

	<div class="stats-grid">
		<!-- Estad√≠sticas de Torneos -->
		<div class="stats-section">
			<h2>üèÜ Estad√≠sticas de Torneos</h2>
			<div class="stats-list">
				<div class="stat-item">
					<span class="label">Total de torneos:</span>
					<span class="value">{{stats.tournaments.total_tournaments}}</span>
				</div>
				<div class="stat-item">
					<span class="label">Buy-ins:</span>
					<span class="value">{{stats.tournaments.buy_ins}}</span>
				</div>
				<div class="stat-item">
					<span class="label">Re-entries:</span>
					<span class="value">{{stats.tournaments.reentries}}</span>
				</div>
				<div class="stat-item">
					<span class="label">Duplos:</span>
					<span class="value">{{stats.tournaments.duplos}}</span>
				</div>
				<div class="stat-item highlight">
					<span class="label">Torneos finalizados:</span>
					<span class="value">{{stats.tournaments.tournaments_finished}}</span>
				</div>
				<div class="stat-item highlight">
					<span class="label">Mejor posici√≥n:</span>
					<span class="value">{{#if stats.tournaments.best_position}}#{{stats.tournaments.best_position}}{{else}}-{{/if}}</span>
				</div>
				<div class="stat-item highlight">
					<span class="label">Posici√≥n promedio:</span>
					<span class="value">{{#if stats.tournaments.avg_position}}{{stats.tournaments.avg_position}}{{else}}-{{/if}}</span>
				</div>
				<div class="stat-item success">
					<span class="label">Podios (Top 3):</span>
					<span class="value">{{stats.tournaments.podium_finishes}}</span>
				</div>
			</div>
		</div>

		<!-- Estad√≠sticas de Cash Games -->
		<div class="stats-section">
			<h2>üíµ Estad√≠sticas de Cash Games</h2>
			<div class="stats-list">
				<div class="stat-item">
					<span class="label">Sesiones totales:</span>
					<span class="value">{{stats.cash.total_sessions}}</span>
				</div>
				<div class="stat-item">
					<span class="label">Tiempo total jugado:</span>
					<span class="value">
						{{#if stats.cash.total_minutes}}
							{{#if (gt stats.cash.total_minutes 60)}}
								~{{#expr}}Math.floor({{stats.cash.total_minutes}} / 60){{/expr}} horas
							{{else}}
								{{stats.cash.total_minutes}} minutos
							{{/if}}
						{{else}}
							0 minutos
						{{/if}}
					</span>
				</div>
				<div class="stat-item warning">
					<span class="label">Sesiones activas:</span>
					<span class="value">{{stats.cash.active_sessions}}</span>
				</div>
			</div>
		</div>

		<!-- Estad√≠sticas de Pagos -->
		<div class="stats-section">
			<h2>üí≥ Estad√≠sticas Financieras</h2>
			<div class="stats-list">
				<div class="stat-item success">
					<span class="label">Total pagado:</span>
					<span class="value">${{currency stats.payments.total_paid}}</span>
				</div>
				<div class="stat-item">
					<span class="label">En torneos:</span>
					<span class="value">${{currency stats.payments.paid_tournaments}}</span>
				</div>
				<div class="stat-item">
					<span class="label">En cash games:</span>
					<span class="value">${{currency stats.payments.paid_cash}}</span>
				</div>
				<div class="stat-item">
					<span class="label">Pagos realizados:</span>
					<span class="value">{{stats.payments.paid_count}}</span>
				</div>
				{{#if (gt stats.payments.total_debt 0)}}
					<div class="stat-item error">
						<span class="label">Deuda pendiente:</span>
						<span class="value">${{currency stats.payments.total_debt}}</span>
					</div>
					<div class="stat-item">
						<span class="label">Pagos pendientes:</span>
						<span class="value">{{stats.payments.unpaid_count}}</span>
					</div>
				{{/if}}
			</div>
		</div>
	</div>

	<!-- Historial reciente -->
	<div class="stats-history">
		<div class="history-section">
			<h2>üìÖ √öltimos Torneos</h2>
			{{#if stats.recentTournaments.length}}
				<div class="history-list">
					{{#each stats.recentTournaments}}
						<div class="history-item">
							<div class="history-info">
								<h3>{{this.tournament.tournament_name}}</h3>
								<p>{{formatDateTime this.tournament.start_date}}</p>
							</div>
							<div class="history-details">
								<span class="badge badge-action-{{this.action_type}}">{{actionLabel this.action_type}}</span>
								{{#if this.position}}
									<span class="position">Puesto #{{this.position}}</span>
								{{/if}}
							</div>
						</div>
					{{/each}}
				</div>
			{{else}}
				<p class="empty-message">No hay torneos registrados</p>
			{{/if}}
		</div>

		<div class="history-section">
			<h2>üí∞ √öltimas Sesiones Cash</h2>
			{{#if stats.recentCashSessions.length}}
				<div class="history-list">
					{{#each stats.recentCashSessions}}
						<div class="history-item">
							<div class="history-info">
								<h3>Mesa Cash - SB ${{currency this.cashGame.small_blind}}</h3>
								<p>{{formatDateTime this.joined_at}}</p>
								{{#if this.cashGame.dealer}}
									<p class="dealer">Dealer: {{this.cashGame.dealer}}</p>
								{{/if}}
							</div>
							<div class="history-details">
								{{#if this.left_at}}
									<span class="badge badge-success">Finalizado</span>
								{{else}}
									<span class="badge badge-warning">En juego</span>
								{{/if}}
							</div>
						</div>
					{{/each}}
				</div>
			{{else}}
				<p class="empty-message">No hay sesiones cash registradas</p>
			{{/if}}
		</div>
	</div>
</div>

