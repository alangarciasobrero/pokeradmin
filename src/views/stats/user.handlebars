<script>
document.addEventListener('DOMContentLoaded', function() {
	// Configuraci√≥n de tema oscuro para Chart.js
	Chart.defaults.color = '#dfe6ff';
	Chart.defaults.borderColor = 'rgba(255, 215, 0, 0.2)';
	
	// Gr√°fico de distribuci√≥n de posiciones
	const positionData = {{{json stats.charts.positionDist}}};
	const positionLabels = {
		'1st': 'ü•á 1er Lugar',
		'2nd-3rd': 'ü•à 2do-3er',
		'4th-9th': 'üìç 4to-9no',
		'10th+': '‚ùå 10+' 
	};
	
	if (positionData && positionData.length > 0) {
		const ctx1 = document.getElementById('positionChart').getContext('2d');
		new Chart(ctx1, {
			type: 'doughnut',
			data: {
				labels: positionData.map(d => positionLabels[d.position_range] || d.position_range),
				datasets: [{
					data: positionData.map(d => d.count),
					backgroundColor: [
						'rgba(255, 215, 0, 0.8)',   // Gold
						'rgba(192, 192, 192, 0.8)', // Silver
						'rgba(205, 127, 50, 0.8)',  // Bronze
						'rgba(229, 57, 53, 0.6)'    // Red
					],
					borderColor: [
						'rgba(255, 215, 0, 1)',
						'rgba(192, 192, 192, 1)',
						'rgba(205, 127, 50, 1)',
						'rgba(229, 57, 53, 1)'
					],
					borderWidth: 2
				}]
			},
			options: {
				responsive: true,
				maintainAspectRatio: true,
				plugins: {
					legend: {
						position: 'bottom',
						labels: {
							padding: 15,
							font: { size: 13 }
						}
					},
					tooltip: {
						backgroundColor: 'rgba(0, 0, 0, 0.8)',
						padding: 12,
						titleFont: { size: 14 },
						bodyFont: { size: 13 }
					}
				}
			}
		});
	}

	// Gr√°fico de evoluci√≥n
	const evolutionData = {{{json stats.charts.evolution}}};
	
	if (evolutionData && evolutionData.length > 0) {
		const ctx2 = document.getElementById('evolutionChart').getContext('2d');
		new Chart(ctx2, {
			type: 'line',
			data: {
				labels: evolutionData.map((d, i) => `T${i + 1}`),
				datasets: [
					{
						label: 'Posici√≥n Final',
						data: evolutionData.map(d => d.position),
						borderColor: 'rgba(229, 57, 53, 0.8)',
						backgroundColor: 'rgba(229, 57, 53, 0.1)',
						borderWidth: 3,
						tension: 0.4,
						yAxisID: 'y',
						pointRadius: 5,
						pointHoverRadius: 7
					},
					{
						label: 'Puntos Obtenidos',
						data: evolutionData.map(d => d.points),
						borderColor: 'rgba(255, 215, 0, 0.8)',
						backgroundColor: 'rgba(255, 215, 0, 0.1)',
						borderWidth: 3,
						tension: 0.4,
						yAxisID: 'y1',
						pointRadius: 5,
						pointHoverRadius: 7
					}
				]
			},
			options: {
				responsive: true,
				maintainAspectRatio: true,
				interaction: {
					mode: 'index',
					intersect: false
				},
				plugins: {
					legend: {
						position: 'top',
						labels: {
							padding: 15,
							font: { size: 13 }
						}
					},
					tooltip: {
						backgroundColor: 'rgba(0, 0, 0, 0.8)',
						padding: 12,
						titleFont: { size: 14 },
						bodyFont: { size: 13 },
						callbacks: {
							title: function(context) {
								const idx = context[0].dataIndex;
								const tournament = evolutionData[idx];
								return tournament.tournament_name;
							}
						}
					}
				},
				scales: {
					y: {
						type: 'linear',
						position: 'left',
						reverse: true,
						title: {
							display: true,
							text: 'Posici√≥n',
							color: '#e53935'
						},
						grid: {
							color: 'rgba(255, 215, 0, 0.1)'
						}
					},
					y1: {
						type: 'linear',
						position: 'right',
						title: {
							display: true,
							text: 'Puntos',
							color: '#FFD700'
						},
						grid: {
							drawOnChartArea: false
						}
					}
				}
			}
		});
	}
});
</script>
