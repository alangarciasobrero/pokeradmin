<div class="overview-container">
	<div class="overview-header">
		<h1>üìä Estad√≠sticas Generales del Sistema</h1>
		<p class="subtitle">Vista completa del estado del club</p>
	</div>

	<!-- M√©tricas Globales -->
	<div class="metrics-grid">
		<div class="metric-card players">
			<div class="metric-icon">üë•</div>
			<div class="metric-content">
				<span class="metric-value">{{stats.total_players}}</span>
				<span class="metric-label">Jugadores Activos</span>
			</div>
		</div>

		<div class="metric-card tournaments">
			<div class="metric-icon">üèÜ</div>
			<div class="metric-content">
				<span class="metric-value">{{stats.total_tournaments}}</span>
				<span class="metric-label">Torneos Realizados</span>
			</div>
		</div>

		<div class="metric-card registrations">
			<div class="metric-icon">üìù</div>
			<div class="metric-content">
				<span class="metric-value">{{stats.total_registrations}}</span>
				<span class="metric-label">Registros Totales</span>
			</div>
		</div>

		<div class="metric-card cash">
			<div class="metric-icon">üíµ</div>
			<div class="metric-content">
				<span class="metric-value">{{stats.total_cash_games}}</span>
				<span class="metric-label">Sesiones Cash</span>
			</div>
		</div>

		<div class="metric-card revenue">
			<div class="metric-icon">üí∞</div>
			<div class="metric-content">
				<span class="metric-value">${{currency stats.total_revenue}}</span>
				<span class="metric-label">Ingresos Totales</span>
			</div>
		</div>

		<div class="metric-card debt">
			<div class="metric-icon">‚ö†Ô∏è</div>
			<div class="metric-content">
				<span class="metric-value">${{currency stats.total_debt}}</span>
				<span class="metric-label">Deuda Pendiente</span>
			</div>
		</div>

		<div class="metric-card participants">
			<div class="metric-icon">üé≤</div>
			<div class="metric-content">
				<span class="metric-value">{{stats.total_cash_participants}}</span>
				<span class="metric-label">Participaciones Cash</span>
			</div>
		</div>

		<div class="metric-card active">
			<div class="metric-icon">üî¥</div>
			<div class="metric-content">
				<span class="metric-value">{{stats.active_cash_games}}</span>
				<span class="metric-label">Mesas Activas</span>
			</div>
		</div>
	</div>

	<!-- Top Players y Actividad Reciente -->
	<div class="content-grid">
		<!-- Top 10 Jugadores -->
		<div class="panel">
			<h2>üåü Top 10 Jugadores</h2>
			<div class="top-players-list">
				{{#if topPlayers.length}}
					{{#each topPlayers}}
						<div class="top-player-item {{#if (lte @index 2)}}rank-{{@index}}{{/if}}">
							<span class="player-rank">
								{{#if (eq @index 0)}}ü•á{{/if}}
								{{#if (eq @index 1)}}ü•à{{/if}}
								{{#if (eq @index 2)}}ü•â{{/if}}
								{{#if (gt @index 2)}}{{add @index 1}}{{/if}}
							</span>
							<div class="player-info-mini">
								{{#if this.avatar}}
									<img src="{{this.avatar}}" alt="{{this.username}}" class="player-avatar-mini" />
								{{else}}
									<div class="avatar-placeholder-mini">üë§</div>
								{{/if}}
								<div class="player-details-mini">
									<span class="player-name-mini">{{#if this.full_name}}{{this.full_name}}{{else}}{{this.username}}{{/if}}</span>
									<span class="player-stats-mini">{{this.tournaments_played}} torneos</span>
								</div>
							</div>
							<span class="player-points">{{this.current_points}} pts</span>
							<a href="/stats/user/{{this.id}}" class="btn-mini">Ver</a>
						</div>
					{{/each}}
				{{else}}
					<p class="empty-message">No hay datos disponibles</p>
				{{/if}}
			</div>
		</div>

		<!-- Actividad Reciente -->
		<div class="panel">
			<h2>üìÖ Actividad Reciente</h2>
			<div class="recent-activity-list">
				{{#if recentActivity.length}}
					{{#each recentActivity}}
						<div class="activity-item">
							<div class="activity-icon">üèÜ</div>
							<div class="activity-details">
								<h3>{{this.name}}</h3>
								<p>{{formatDateTime this.date}}</p>
								<span class="participant-count">{{this.participant_count}} participantes</span>
							</div>
						</div>
					{{/each}}
				{{else}}
					<p class="empty-message">No hay actividad reciente</p>
				{{/if}}
			</div>
		</div>
	</div>

	<!-- Ingresos Mensuales -->
	<div class="panel revenue-panel">
		<h2>üí≥ Ingresos por Mes (√öltimos 6 meses)</h2>
		{{#if monthlyRevenue.length}}
			<div class="revenue-chart">
				{{#each monthlyRevenue}}
					<div class="revenue-bar-container">
						<div class="revenue-bar" style="height: {{#expr}}({{this.revenue}} / 50000) * 100{{/expr}}%;">
							<span class="revenue-value">${{currency this.revenue}}</span>
						</div>
						<span class="revenue-month">{{this.month}}</span>
						<span class="revenue-count">{{this.payment_count}} pagos</span>
					</div>
				{{/each}}
			</div>
		{{else}}
			<p class="empty-message">No hay datos de ingresos</p>
		{{/if}}
	</div>
</div>

