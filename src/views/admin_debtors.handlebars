<script>
function openQuickPayModal(userId, fullName, debt) {
  document.getElementById('modalUserName').textContent = fullName;
  document.getElementById('modalDebt').textContent = debt.toLocaleString('es-AR', {minimumFractionDigits: 0, maximumFractionDigits: 0});
  document.getElementById('quickAmount').value = debt;
  document.getElementById('quickPayForm').action = `/admin/users/${userId}/payments/quick-pay`;
  document.getElementById('quickPayModal').style.display = 'flex';
}
function closeQuickPayModal() { document.getElementById('quickPayModal').style.display = 'none'; }
window.onclick = function(event) {
  const modal = document.getElementById('quickPayModal');
  if (event.target == modal) { closeQuickPayModal(); }
}
</script>

