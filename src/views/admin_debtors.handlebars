            <th class="sortable" data-sort="fullname">Nombre Completo <span class="sort-icon">‚áÖ</span></th>
            {{#unless showAll}}
            <th class="sortable" data-sort="debt">Deuda {{#if date}}del D√≠a{{else}}de Hoy{{/if}} <span class="sort-icon">‚áÖ</span></th>
            {{/unless}}
            <th class="sortable" data-sort="totalDebt">Deuda Total <span class="sort-icon">‚áÖ</span></th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody id="debtorsTableBody">
          {{#each rows}}
            <tr data-username="{{this.user.username}}" data-fullname="{{this.user.full_name}}" data-debt="{{this.amountDue}}" data-totaldebt="{{this.totalDebt}}">
              <td class="username-cell">{{this.user.username}}</td>
              <td class="fullname-cell">{{this.user.full_name}}</td>
              {{#unless ../showAll}}
              <td class="debt-cell">${{currency this.amountDue}}</td>
              {{/unless}}
              <td class="debt-cell total-debt">${{currency this.totalDebt}}</td>
