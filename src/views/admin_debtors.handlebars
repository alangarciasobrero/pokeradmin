<div class="debtors-modern">
  <div class="page-header">
    <h1>‚ö†Ô∏è {{#if showAll}}Todos los Deudores{{else}}{{#if date}}Deudores Diarios{{else}}Deudores de Hoy{{/if}}{{/if}}</h1>
  </div>

  <div class="filters-section">
    <form method="get" action="/admin/debtors" class="filter-form">
      <div class="form-group">
        <label for="date">üìÖ Fecha espec√≠fica:</label>
        <input type="date" id="date" name="date" value="{{#if date}}{{formatDateISO date}}{{/if}}" class="date-input" />
      </div>
      <div class="form-group">
        <label for="username">üë§ Usuario:</label>
        <input type="text" id="username" name="username" value="{{filters.username}}" placeholder="Buscar por nombre..." class="text-input" />
      </div>
      <button type="submit" class="btn-filter">üîç Filtrar por fecha</button>
      <a href="/admin/debtors?all=true" class="btn-all">üìä Ver todos los deudores</a>
      <a href="/admin/debtors" class="btn-clear">üìÖ Deudores de hoy</a>
    </form>
  </div>

  {{#if rows.length}}
    <div class="summary-bar">
      {{#if showAll}}
        <span class="summary-label">Deuda total acumulada:</span>
        <span class="summary-amount">üí∞ {{currency grandTotalDebt}}</span>
      {{else}}
        <span class="summary-label">Deuda {{#if date}}del d√≠a{{else}}de hoy{{/if}}:</span>
        <span class="summary-amount">üí∞ {{currency totalDebt}}</span>
        <span class="summary-separator">|</span>
        <span class="summary-label">Deuda total:</span>
        <span class="summary-amount">üí∞ {{currency grandTotalDebt}}</span>
      {{/if}}
      <span class="summary-count">({{rows.length}} deudores)</span>
    </div>
    
    <div class="table-container">
      <table class="debtors-table">
        <thead>
          <tr>
            <th class="sortable" data-sort="username">Username <span class="sort-icon">‚áÖ</span></th>
            <th class="sortable" data-sort="fullname">Nombre Completo <span class="sort-icon">‚áÖ</span></th>
            {{#unless showAll}}
            <th class="sortable" data-sort="debt">Deuda {{#if date}}del D√≠a{{else}}de Hoy{{/if}} <span class="sort-icon">‚áÖ</span></th>
            {{/unless}}
            <th class="sortable" data-sort="totalDebt">Deuda Total <span class="sort-icon">‚áÖ</span></th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody id="debtorsTableBody">
          {{#each rows}}
            <tr data-username="{{this.user.username}}" data-fullname="{{this.user.full_name}}" data-debt="{{this.amountDue}}" data-totaldebt="{{this.totalDebt}}">
              <td class="username-cell">{{this.user.username}}</td>
              <td class="fullname-cell">{{this.user.full_name}}</td>
              {{#unless ../showAll}}
              <td class="debt-cell">${{currency this.amountDue}}</td>
              {{/unless}}
              <td class="debt-cell total-debt">${{currency this.totalDebt}}</td>
              <td class="actions-cell">
                <a class="btn-ledger" href="/admin/users/{{this.user.id}}/ledger">
                  üìä Libro mayor
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <div class="empty-state">
      <span class="empty-icon">‚úÖ</span>
      <p>No hay deudores para la fecha seleccionada</p>
    </div>
  {{/if}}
</div>

<script>
// Ordenamiento de tabla
(function() {
  const table = document.querySelector('.debtors-table');
  if (!table) return;
  
  const headers = table.querySelectorAll('th.sortable');
  let sortDirection = {};
  
  headers.forEach(header => {
    const sortKey = header.dataset.sort;
    sortDirection[sortKey] = 'asc';
    
    header.addEventListener('click', () => {
      const tbody = document.getElementById('debtorsTableBody');
      const rows = Array.from(tbody.querySelectorAll('tr'));
      
      const direction = sortDirection[sortKey];
      const isAsc = direction === 'asc';
      
      rows.sort((a, b) => {
        let aVal = a.dataset[sortKey];
        let bVal = b.dataset[sortKey];
        
        if (sortKey === 'debt' || sortKey === 'totaldebt') {
          aVal = parseFloat(aVal);
          bVal = parseFloat(bVal);
        } else {
          aVal = (aVal || '').toLowerCase();
          bVal = (bVal || '').toLowerCase();
        }
        
        if (aVal < bVal) return isAsc ? -1 : 1;
        if (aVal > bVal) return isAsc ? 1 : -1;
        return 0;
      });
      
      tbody.innerHTML = '';
      rows.forEach(row => tbody.appendChild(row));
      
      sortDirection[sortKey] = isAsc ? 'desc' : 'asc';
      
      // Update sort icons
      headers.forEach(h => h.classList.remove('sorted-asc', 'sorted-desc'));
      header.classList.add(isAsc ? 'sorted-asc' : 'sorted-desc');
    });
  });
})();
</script>

