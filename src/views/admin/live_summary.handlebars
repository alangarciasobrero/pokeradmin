{{! admin/live_summary.handlebars }}
<div class="live-summary">
  <div class="summary-section">
    <h3>Torneos activos</h3>
    <div class="summary-value">{{summary.activeTournaments}}</div>
  </div>
  <div class="summary-section">
    <h3>Mesas cash activas</h3>
    <div class="summary-value">{{summary.activeCashGames}}</div>
  </div>
  <div class="summary-section">
    <h3>Jugadores en juego</h3>
    <div class="summary-value">{{summary.playersPlaying}}</div>
  </div>
</div>
<style>
.live-summary { display: flex; gap: 2rem; justify-content: flex-start; margin-top: 2rem; }
.summary-section { background: #f5f5f5; border-radius: 8px; padding: 1.5rem 2.5rem; box-shadow: 0 1px 4px rgba(0,0,0,0.07); text-align: center; }
.summary-value { font-size: 2.2rem; font-weight: bold; color: #007bff; margin-top: 0.5rem; }
</style>
