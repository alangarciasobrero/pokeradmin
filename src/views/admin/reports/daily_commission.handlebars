<div class="daily-commission-report">
	<div class="report-header">
		<h1>üí∞ Reporte de Comisi√≥n Diaria</h1>
		<div style="display:flex;align-items:center;gap:1rem;margin:1rem 0;">
			<p class="report-date" style="margin:0;">üìÖ {{formatDate date}}</p>
			<input type="date" id="dateFilter" value="{{date}}" style="padding:0.5rem;border-radius:6px;border:1px solid rgba(255,215,0,0.3);background:rgba(255,255,255,0.05);color:#fff;" />
			<button onclick="window.location.href='/admin/reports/daily-commission?date='+document.getElementById('dateFilter').value" style="padding:0.5rem 1rem;background:#4CAF50;border:none;border-radius:6px;color:white;cursor:pointer;font-weight:600;">Filtrar</button>
			<button onclick="window.location.href='/admin/reports/daily-commission'" style="padding:0.5rem 1rem;background:#757575;border:none;border-radius:6px;color:white;cursor:pointer;">Hoy</button>
		</div>
		<a href="/admin/dashboard" class="back-link">‚Üê Volver al Dashboard</a>
	</div>

	<div class="summary-cards">
		<div class="summary-card tournaments">
			<div class="card-icon">üèÜ</div>
			<div class="card-content">
				<span class="card-label">Torneos</span>
				<span class="card-value">${{currency totalTournaments}}</span>
				<span class="card-detail">{{tournamentData.length}} torneos</span>
			</div>
		</div>
		<div class="summary-card cash">
			<div class="card-icon">üé∞</div>
			<div class="card-content">
				<span class="card-label">Mesas Cash</span>
				<span class="card-value">${{currency totalCash}}</span>
				<span class="card-detail">{{cashData.length}} mesas</span>
			</div>
		</div>
		<div class="summary-card total">
			<div class="card-icon">üíµ</div>
			<div class="card-content">
				<span class="card-label">Total del D√≠a</span>
				<span class="card-value">${{currency grandTotal}}</span>
				<span class="card-detail">Comisi√≥n bruta</span>
			</div>
		</div>
	</div>

	{{#if breakdown}}
	<div class="report-section">
		<h2>üìä Desglose de Comisiones</h2>
		<div class="breakdown-container" style="display:grid;grid-template-columns:repeat(auto-fit,minmax(200px,1fr));gap:1rem;margin-bottom:2rem;">
			{{#each destinations}}
			<div class="breakdown-card" style="background:rgba(76,175,80,0.1);border:2px solid rgba(76,175,80,0.3);border-radius:8px;padding:1.5rem;text-align:center;">
				<div style="font-size:0.9rem;color:#aaa;margin-bottom:0.5rem;">
					{{#if (eq this.type 'house')}}üè¢{{else}}‚≠ê{{/if}} {{this.name}}
				</div>
				<div style="font-size:1.5rem;font-weight:700;color:#4CAF50;">${{currency (lookup ../breakdown (concat 'dest_' this.id))}}</div>
				<div style="font-size:0.75rem;color:#888;margin-top:0.25rem;">{{this.percentage}}% del total</div>
			</div>
			{{/each}}
		</div>
	</div>
	{{/if}}

	{{#if tournamentData.length}}
	<div class="report-section">
		<h2>üèÜ Comisiones de Torneos</h2>
		<div class="table-container">
			<table class="report-table">
				<thead>
					<tr>
						<th>#</th>
						<th>Nombre del Torneo</th>
						<th>Buy-in</th>
						<th>Hora</th>
						{{#each ../destinations}}
						<th style="background:rgba(76,175,80,0.05);">{{#if (eq this.type 'house')}}üè¢{{else}}‚≠ê{{/if}} {{this.name}}</th>
						{{/each}}
					</tr>
				</thead>
				<tbody>
					{{#each tournamentData}}
					<tr>
						<td>{{this.id}}</td>
						<td><a href="/admin/games/tournaments/{{this.id}}" class="tournament-link">{{this.name}}</a></td>
						<td>${{currency this.buy_in}}</td>
						<td>{{formatTime this.start_time}}</td>
						{{#each ../../destinations}}
						<td class="commission-amount" style="color:#4CAF50;font-weight:600;">${{currency (lookup ../breakdown (concat 'dest_' this.id))}}</td>
						{{/each}}
					</tr>
					{{/each}}
				</tbody>
				<tfoot>
					<tr>
						<td colspan="4" class="total-label">Subtotal Torneos</td>
						{{#each ../destinations}}
						<td class="total-amount" style="color:#4CAF50;">${{currency (lookup ../../breakdown (concat 'dest_' this.id))}}</td>
						{{/each}}
					</tr>
				</tfoot>
			</table>
		</div>
	</div>
	{{else}}
	<div class="report-section">
		<h2>üèÜ Comisiones de Torneos</h2>
		<div class="empty-state">
			<span class="empty-icon">üèÜ</span>
			<p>No hay comisiones de torneos hoy</p>
		</div>
	</div>
	{{/if}}

	{{#if cashData.length}}
	<div class="report-section">
		<h2>üé∞ Comisiones de Mesas Cash</h2>
		<div class="table-container">
			<table class="report-table">
				<thead>
					<tr>
						<th>#</th>
						<th>Mesa</th>
						<th>Dealer</th>
						<th>Hora Inicio</th>
						<th>Comisi√≥n</th>
					</tr>
				</thead>
				<tbody>
					{{#each cashData}}
					<tr>
						<td>{{this.id}}</td>
						<td><a href="/admin/games/cash/{{this.id}}" class="cash-link">{{this.name}}</a></td>
						<td>{{this.dealer}}</td>
						<td>{{formatTime this.start_time}}</td>
						<td class="commission-amount">${{currency this.commission}}</td>
					</tr>
					{{/each}}
				</tbody>
				<tfoot>
					<tr>
						<td colspan="4" class="total-label">Subtotal Mesas Cash</td>
						<td class="total-amount">${{currency ../totalCash}}</td>
					</tr>
				</tfoot>
			</table>
		</div>
	</div>
	{{else}}
	<div class="report-section">
		<h2>üé∞ Comisiones de Mesas Cash</h2>
		<div class="empty-state">
			<span class="empty-icon">üé∞</span>
			<p>No hay comisiones de mesas cash hoy</p>
		</div>
	</div>
	{{/if}}
</div>

<style>
