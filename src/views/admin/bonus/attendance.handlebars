  color: white;
}

.badge.gold {
  background: linear-gradient(135deg, #ffd700 0%, #ff8c00 100%);
  color: white;
}

.badge.diamond {
  background: linear-gradient(135deg, #b9f2ff 0%, #0077be 100%);
  color: white;
}

.attendance-table-wrapper {
