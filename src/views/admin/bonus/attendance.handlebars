  border-radius: 8px;
  padding: 1.5rem;
  margin-bottom: 2rem;
}

.bonus-legend h3 {
  margin-top: 0;
  margin-bottom: 1rem;
  color: #495057;
}

.legend-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
}

.legend-item {
  display: flex;
