{{> header_admin}}

<div class="content-wrapper">
  <div class="page-header">
    <h1>üéÅ Bonus por Asistencia</h1>
    <p>Estado de asistencia de jugadores y bonificaciones elegibles</p>
  </div>

  {{#if activeSeason}}
  <div class="info-card">
    <strong>Temporada activa:</strong> {{activeSeason.name}}
    <small>({{formatDate activeSeason.start_date}} - {{formatDate activeSeason.end_date}})</small>
  </div>
  {{/if}}

  <div class="bonus-legend">
    <h3>Criterios de Bonus</h3>
    <div class="legend-grid">
      <div class="legend-item">
        <span class="badge bronze">ü•â Bronce</span>
        <small>3+ jornadas en √∫ltima semana</small>
      </div>
      <div class="legend-item">
        <span class="badge silver">ü•à Plata</span>
        <small>10+ jornadas en el mes actual</small>
      </div>
      <div class="legend-item">
        <span class="badge gold">ü•á Oro</span>
        <small>28+ jornadas en la temporada</small>
      </div>
      <div class="legend-item">
        <span class="badge diamond">üíé Diamante</span>
        <small>32+ jornadas en la temporada</small>
      </div>
    </div>
  </div>

  <div class="attendance-table-wrapper">
    <table class="attendance-table">
      <thead>
        <tr>
          <th>Jugador</th>
          <th>Total</th>
          <th>Temporada</th>
          <th>Mes Actual</th>
          <th>√öltima Semana</th>
          <th>Bonuses Activos</th>
        </tr>
      </thead>
      <tbody>
        {{#each attendanceData}}
        <tr>
          <td>
            <strong>{{this.fullName}}</strong>
            <small class="username-small">@{{this.username}}</small>
          </td>
          <td class="count-cell">{{this.totalCount}}</td>
          <td class="count-cell">{{this.seasonCount}}</td>
          <td class="count-cell">{{this.monthCount}}</td>
          <td class="count-cell">{{this.weekCount}}</td>
          <td class="bonuses-cell">{{this.bonuses}}</td>
        </tr>
        {{else}}
        <tr>
          <td colspan="6" style="text-align:center; padding:2rem; color:#999;">
            No hay datos de asistencia disponibles
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div class="actions-footer">
    <a href="/admin/bonus/calculate" class="btn-primary">üéÅ Calcular y Otorgar Bonus</a>
    <a href="/admin/games/settings" class="btn-secondary">Volver a Configuraci√≥n</a>
  </div>
</div>

<style>
.content-wrapper {
  max-width: 1400px;
  margin: 0 auto;
  padding: 2rem;
}

.page-header {
  margin-bottom: 2rem;
}

.page-header h1 {
  font-size: 2rem;
