  color: #2c3e50;
}

.page-header p {
  color: #7f8c8d;
  font-size: 1rem;
}

.info-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 1rem 1.5rem;
  border-radius: 8px;
  margin-bottom: 2rem;
}

.info-card strong {
  font-size: 1.1rem;
}

.info-card small {
