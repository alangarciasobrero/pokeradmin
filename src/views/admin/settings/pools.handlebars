<div class="pools-wrapper">
  <div class="page-header">
    <h1>üí∞ Pozos Acumulados</h1>
    <p>Montos acumulados de comisiones por destino</p>
  </div>

  <div class="summary-cards">
    <div class="summary-card house">
      <div class="card-icon">üè†</div>
      <h3>Casa</h3>
      <div class="amount">${{summary.house}}</div>
      <small>Acumulado total</small>
    </div>

    <div class="summary-card ranking">
      <div class="card-icon">üèÜ</div>
      <h3>Rankings de Temporada</h3>
      <div class="amount">${{summary.season_ranking}}</div>
      <small>Acumulado total</small>
    </div>

    <div class="summary-card special">
      <div class="card-icon">üëë</div>
      <h3>Torneos Especiales</h3>
      <div class="amount">${{summary.special_tournament}}</div>
      <small>Acumulado total</small>
    </div>
  </div>

  <h2>Detalle por Destino</h2>
  {{#if poolsData.length}}
    <div class="pools-grid">
      {{#each poolsData}}
        <div class="pool-card {{this.type}}">
          <div class="pool-header">
            <h3>{{this.name}}</h3>
            <span class="pool-badge">
              {{#if (eq this.type 'house')}}üè† Casa{{/if}}
              {{#if (eq this.type 'season_ranking')}}üèÜ Ranking{{/if}}
              {{#if (eq this.type 'special_tournament')}}üëë Especial{{/if}}
            </span>
          </div>

          {{#if this.seasonName}}
            <div class="pool-meta">üìÖ Temporada: {{this.seasonName}}</div>
          {{/if}}
          {{#if this.tournamentName}}
            <div class="pool-meta">üéØ Torneo: {{this.tournamentName}}</div>
          {{/if}}

          <div class="pool-stats">
            <div class="stat">
              <div class="stat-label">Monto Acumulado</div>
              <div class="stat-value">${{this.accumulated}}</div>
            </div>
            <div class="stat">
              <div class="stat-label">% Configurado</div>
              <div class="stat-value">{{this.percentage}}%</div>
            </div>
            <div class="stat">
              <div class="stat-label">Torneos Contribuyentes</div>
              <div class="stat-value">{{this.contributingTournaments}}</div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="empty-state">
      <p>No hay pozos configurados</p>
      <a href="/admin/commissions" class="btn-primary">Configurar Comisiones</a>
    </div>
  {{/if}}

  <div class="actions-bar">
    <a href="/admin/games/settings" class="btn-secondary">Volver a Configuraci√≥n</a>
    <a href="/admin/commissions" class="btn-primary">‚öôÔ∏è Configurar Comisiones</a>
  </div>
</div>

