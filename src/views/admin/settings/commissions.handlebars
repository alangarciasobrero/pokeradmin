{{> header_admin}}

<div class="commission-container">
  <h1>‚öôÔ∏è Configuraci√≥n de Comisiones</h1>
  <p class="subtitle">Gestiona los destinos y porcentajes de distribuci√≥n de comisiones</p>

  <div class="summary-alert">
    <strong>Total configurado: {{totalPercentage}}%</strong>
    {{#if (gt totalPercentage 100)}}
      ‚ö†Ô∏è El total excede 100%. Ajusta los porcentajes.
    {{else}}
      {{#if (lt totalPercentage 100)}}
      ‚ÑπÔ∏è A√∫n quedan {{subtract 100 totalPercentage}}% sin asignar.
      {{else}}
      ‚úÖ Distribuci√≥n completa al 100%
      {{/if}}
    {{/if}}
  </div>

  <div class="destinations-section">
    <h2>üéØ Destinos de Comisi√≥n</h2>
    
    <div class="destinations-grid">
      {{#each destinations}}
      <div class="destination-card">
        <div class="card-header">
          <h3>{{this.name}}</h3>
          <span class="type-badge type-{{this.type}}">
            {{#if (eq this.type 'house')}}üè† Casa{{else}}‚≠ê Premio{{/if}}
          </span>
        </div>
        
        {{#if this.season}}
        <p class="detail">üìÖ Temporada: {{this.season.nombre}}</p>
        {{/if}}
        
        {{#if this.tournament}}
        <p class="detail">üé≤ Torneo: {{this.tournament.name}}</p>
        {{/if}}
        
        <div class="stats-row">
          <div class="stat">
            <span class="label">Acumulado:</span>
            <span class="value">${{this.accumulated}}</span>
          </div>
        </div>
        
        <form method="POST" action="/admin/games/settings/commissions/config" class="config-form">
          <input type="hidden" name="destination_id" value="{{this.id}}">
          <div class="input-group">
            <input type="number" name="percentage" step="0.01" min="0" max="100" 
                   value="{{this.percentage}}" placeholder="0.00" required>
            <span class="suffix">%</span>
            <button type="submit" class="btn-save">üíæ</button>
          </div>
        </form>
        
        <form method="POST" action="/admin/games/settings/commissions/destination/{{this.id}}/delete" style="margin-top:0.5rem;">
          <button type="submit" class="btn-delete" onclick="return confirm('¬øDesactivar este destino?')">
            üóëÔ∏è Desactivar
          </button>
        </form>
      </div>
      {{else}}
      <p class="empty-state">No hay destinos configurados. Crea el primero abajo.</p>
      {{/each}}
    </div>
  </div>

  <div class="new-destination-section">
    <h2>‚ûï Crear Nuevo Destino</h2>
    <form method="POST" action="/admin/games/settings/commissions/destination" class="new-destination-form">
      <div class="form-row">
        <div class="form-group">
          <label>Nombre:</label>
          <input type="text" name="name" required placeholder="ej: Copa Don Humberto 2025">
        </div>
        
        <div class="form-group">
          <label>Tipo:</label>
          <select name="type" id="typeSelect" required>
            <option value="house">üè† Casa</option>
            <option value="special_tournament">‚≠ê Premio Especial</option>
          </select>
        </div>
      </div>

      <div class="form-row" id="seasonRow" style="display:none;">
        <div class="form-group">
          <label>üìÖ Temporada (opcional):</label>
          <select name="season_id">
            <option value="">-- Sin temporada --</option>
            {{#each seasons}}
            <option value="{{this.id}}">{{this.nombre}} ({{#if (eq this.estado 'activa')}}‚úÖ Activa{{else}}{{this.estado}}{{/if}})</option>
            {{/each}}
          </select>
        </div>
      </div>
      
      <button type="submit" class="btn-primary">‚úì Crear Destino</button>
    </form>
  </div>

  <div class="actions-footer">
    <a href="/admin/games/settings" class="btn-back">‚Üê Volver a Configuraci√≥n</a>
  </div>
</div>

<style>
.commission-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem;
  color: #e0e0e0;
}

.commission-container h1 {
  color: #FFD700;
  margin-bottom: 0.5rem;
}

.subtitle {
  color: #aaa;
  margin-bottom: 1.5rem;
  font-size: 1rem;
}

.summary-alert {
  padding: 1rem 1.5rem;
  border-radius: 8px;
  margin-bottom: 2rem;
  font-size: 1.1rem;
  background: rgba(40, 167, 69, 0.15);
  color: #5dd879;
  border: 1px solid rgba(40, 167, 69, 0.3);
}

.destinations-section {
  margin-bottom: 3rem;
}

.destinations-section h2 {
  margin-bottom: 1.5rem;
  color: #FFD700;
  font-size: 1.5rem;
}

.destinations-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 1.5rem;
}

.destination-card {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 215, 0, 0.2);
  border-radius: 12px;
  padding: 1.5rem;
  transition: all 0.3s ease;
}

.destination-card:hover {
  box-shadow: 0 4px 20px rgba(255, 215, 0, 0.2);
  transform: translateY(-2px);
  border-color: rgba(255, 215, 0, 0.4);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.card-header h3 {
  margin: 0;
  font-size: 1.2rem;
  color: #FFD700;
}

.type-badge {
  padding: 0.35rem 0.85rem;
  border-radius: 20px;
  font-size: 0.85rem;
  font-weight: 600;
  box-shadow: 0 2px 8px rgba(0,0,0,0.3);
}

.type-house { background: linear-gradient(135deg, #667eea, #764ba2); color: white; }
.type-special_tournament { background: linear-gradient(135deg, #FFD700, #FFA500); color: #000; font-weight: 700; }

.detail {
  font-size: 0.9rem;
  color: #aaa;
  margin: 0.5rem 0;
}

.stats-row {
  margin: 1rem 0;
  padding: 0.75rem;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 6px;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.stat {
  display: flex;
  justify-content: space-between;
}

.stat .label {
  color: #aaa;
  font-size: 0.9rem;
}

.stat .value {
  font-weight: 700;
  color: #5dd879;
  font-size: 1.1rem;
}

.config-form {
  margin: 1rem 0;
}

.input-group {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.input-group input {
  flex: 1;
  padding: 0.5rem;
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 6px;
  font-size: 1rem;
  background: rgba(255, 255, 255, 0.05);
  color: #fff;
}

.input-group input:focus {
  outline: none;
  border-color: #FFD700;
  background: rgba(255, 255, 255, 0.08);
}

.input-group .suffix {
  font-weight: 600;
  color: #FFD700;
}

.btn-save {
  padding: 0.5rem 1rem;
  background: linear-gradient(135deg, #28a745, #20c997);
  color: white;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  font-size: 1rem;
  transition: all 0.3s ease;
}

.btn-save:hover {
  transform: scale(1.05);
  box-shadow: 0 4px 12px rgba(40, 167, 69, 0.4);
}

.btn-delete {
  width: 100%;
  padding: 0.5rem;
  background: rgba(220, 53, 69, 0.2);
  color: #ff6b7a;
  border: 1px solid rgba(220, 53, 69, 0.4);
  border-radius: 6px;
  cursor: pointer;
  font-size: 0.9rem;
  transition: all 0.3s ease;
}

.btn-delete:hover {
  background: rgba(220, 53, 69, 0.3);
  border-color: #dc3545;
}

.empty-state {
  text-align: center;
  padding: 3rem;
  color: #777;
  grid-column: 1 / -1;
  font-size: 1.1rem;
}

.new-destination-section {
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 215, 0, 0.2);
  border-radius: 12px;
  padding: 2rem;
  margin-bottom: 2rem;
}

.new-destination-section h2 {
  margin-top: 0;
  color: #FFD700;
  font-size: 1.5rem;
}

.new-destination-form .form-row {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1rem;
  margin-bottom: 1rem;
}

.form-group {
  display: flex;
  flex-direction: column;
}

.form-group label {
  margin-bottom: 0.5rem;
  font-weight: 600;
  color: #FFD700;
  font-size: 0.95rem;
}

.form-group input,
.form-group select {
  padding: 0.75rem;
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 6px;
  font-size: 1rem;
  background: rgba(255, 255, 255, 0.05);
  color: #fff;
  transition: all 0.3s ease;
}

.form-group input:focus,
.form-group select:focus {
  outline: none;
  border-color: #FFD700;
  background: rgba(255, 255, 255, 0.08);
}

.form-group select option {
  background: #1a1a1a;
  color: #fff;
}

.btn-primary {
  padding: 0.75rem 2rem;
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: #000;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  font-size: 1rem;
  font-weight: 700;
  transition: all 0.3s ease;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(255, 215, 0, 0.4);
}

.actions-footer {
  text-align: center;
  padding-top: 2rem;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.btn-back {
  padding: 0.75rem 1.5rem;
  background: rgba(255, 255, 255, 0.05);
  color: #e0e0e0;
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 8px;
  text-decoration: none;
  display: inline-block;
  transition: all 0.3s ease;
}

.btn-back:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: #FFD700;
  color: #FFD700;
}

@media (max-width: 768px) {
  .commission-container {
    padding: 1rem;
  }

  .destinations-grid {
    grid-template-columns: 1fr;
  }

  .new-destination-form .form-row {
    grid-template-columns: 1fr;
  }
}
</style>

<script>
document.getElementById('typeSelect').addEventListener('change', function() {
  const seasonRow = document.getElementById('seasonRow');
  seasonRow.style.display = this.value === 'special_tournament' ? 'block' : 'none';
});
</script>

