<div class="registrations-modern">
  <div class="page-header-modern">
    <h1>üìù Gesti√≥n de Inscripciones</h1>
    <a class="btn-create" href="/admin/registrations/new">+ Nueva Inscripci√≥n</a>
  </div>

  <div class="filters-section">
    <form method="get" action="/admin/registrations/list">
      <div class="filter-group-modern">
        <label for="tournament_id">üèÜ Torneo:</label>
        <select name="tournament_id" id="tournament_id" class="select-modern">
          <option value="">Todos los torneos</option>
          {{#each tournaments}}
            <option value="{{this.id}}" {{#if (eq ../selected_tournament_id this.id)}}selected{{/if}}>{{this.tournament_name}}</option>
          {{/each}}
        </select>
      </div>
      
      <div class="filter-group-modern">
        <label for="user_id">üë§ Usuario:</label>
        <select name="user_id" id="user_id" class="select-modern">
          <option value="">Todos los usuarios</option>
          {{#each users}}
            <option value="{{@key}}" {{#if (eq ../selected_user_id @key)}}selected{{/if}}>{{this.full_name}} ({{this.username}})</option>
          {{/each}}
        </select>
      </div>
      
      <button class="btn-filter" type="submit">üîç Filtrar</button>
      <a href="/admin/registrations/list" class="btn-clear">‚úï Limpiar</a>
    </form>
  </div>

  {{#if registrations.length}}
    <div class="table-container">
      <table class="modern-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Usuario</th>
            <th>Torneo</th>
            <th>Fecha</th>
            <th>Tipo</th>
            <th>Puntualidad</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each registrations}}
            <tr class="table-row {{#if (gt this.debt 0)}}unpaid-row{{/if}}">
              <td class="col-id">#{{id}}</td>
              <td class="col-user">
                {{#with (lookup ../users this.user_id)}}
                  <div class="user-cell">
                    <span class="user-name">{{this.full_name}}</span>
                    <span class="user-username">({{this.username}})</span>
                  </div>
                {{else}}
                  <span class="user-id">Usuario #{{this.user_id}}</span>
                {{/with}}
              </td>
              <td class="col-tournament">
                {{#with (lookup ../tournaments this.tournament_id)}}
                  {{this.tournament_name}}
                {{else}}
                  Torneo #{{this.tournament_id}}
                {{/with}}
              </td>
              <td class="col-date">{{registration_date}}</td>
              <td class="col-action">
                <span class="action-badge">{{actionLabel action_type}}</span>
              </td>
              <td class="col-punctuality">
                {{#if (eq punctuality 'on-time')}}
                  <span class="punctuality-badge on-time">‚úÖ A tiempo</span>
                {{else if (eq punctuality 'late')}}
                  <span class="punctuality-badge late">‚è∞ Tarde</span>
                {{else}}
                  <span class="punctuality-badge unknown">‚ùì {{punctuality}}</span>
                {{/if}}
              </td>
              <td class="col-actions">
                <div class="actions-group">
                  <a class="btn-view-sm" href="/admin/registrations/{{id}}">üëÅÔ∏è Ver</a>
                  <form method="post" action="/admin/registrations/{{id}}/delete" class="inline-form">
                    <button class="btn-delete-sm" type="submit" onclick="return confirm('¬øEliminar inscripci√≥n #{{id}}?')">üóëÔ∏è</button>
                  </form>
                </div>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    {{#if meta}}
      <nav class="pagination" aria-label="Paginaci√≥n de inscripciones">
        {{#if links.prev}}<a class="btn" href="{{links.prev}}">‚Üê Anterior</a>{{else}}<span class="disabled">‚Üê Anterior</span>{{/if}}
        <span class="page-info">P√°gina {{meta.page}} de {{meta.total_pages}}</span>
        {{#if links.next}}<a class="btn" href="{{links.next}}">Siguiente ‚Üí</a>{{else}}<span class="disabled">Siguiente ‚Üí</span>{{/if}}
      </nav>
    {{/if}}

  {{else}}
    <div>No hay inscripciones.</div>
  {{/if}}
</div>

